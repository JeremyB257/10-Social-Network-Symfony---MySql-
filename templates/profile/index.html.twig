{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Profile
{% endblock %}

{% block body %}

	<div class="row mt-3">
		<div class="col-5 col-md-3">
			<div class="card">
				<img src="{{asset('img/' ~ app.user.img)}}" alt="" class="w-100">
				<div class="card-body">
					<h5 class="card-title">{{user.name}}</h5>
					{% if user.birthday %}
						<p class="card-text">{{user.birthday | date('d/m/Y')}}
							({{'now' | date('Y') - user.birthday | date('Y')}}
							ans)</p>
					{% endif %}
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item">Email:
						{{user.email}}</li>
					<li class="list-group-item">Biographie:
						{{user.biography}}</li>
				</ul>
			</div>
			<div class="text-center">
				<a href="{{path('profile.edit', {id: user.id})}}" class="btn btn-primary mt-2">Modifier</a>
				<a href="{{path('profile.delete', {id: user.id})}}" class="btn btn-danger mt-2">Supprimer</a>
			</div>
		</div>
		<div class="col-7 col-md-9">
			{% for post in posts %}
				<div class="card mb-3" style="max-width: 540px;">
					<div class="row g-0">
						<div class="col-1 ps-3 pt-2">
							<img src="{{asset('img/' ~ post.user.img)}}" class="profileNavbarImg" alt="...">
						</div>
						<div class="col-11 px-2">
							<div class="card-body">
								<h5 class="card-title">{{post.user.name}}
									<small class="text-muted fs-6 fw-light">{{ post.createdat | ago }}</small>
								</h5>

								<p class="card-text">{{post.content}}</p>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		{% if posts | length > 10 %}

			<form class="text-center">
				<button class="btn btn-primary" name="limit" value="{{limit + 10}}">Chargez plus</button>
			</form>
		{% endif %}
	</div>
{% endblock %}
