<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}The SocialNetwork
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/gh/hung1001/font-awesome-pro-v6@44659d9/css/all.min.css" rel="stylesheet" type="text/css"/>
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	{% set route = app.request.get('_route') %}

	<body class="h100">
		<nav class="navbar navbar-expand-sm bg-white shadow-sm">
			<div class="container-lg">
				<a class="navbar-brand fw-bold" href="#">The Social Network</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-sm-0">
						<li class="nav-item">
							<a class="nav-link fw-bold {{route == 'home.index' ? 'active' : ''}}" aria-current="page" href="{{path('home.index')}}">
								<i class="fa-solid fa-house"></i>
								Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link fw-bold  {{route == 'users.index' ? 'active' : ''}}" href="#">
								<i class="fa-solid fa-users"></i>
								Membres</a>
						</li>

					</ul>


					<ul class="navbar-nav mb-2 mb-sm-0">
						<li class="nav-item">
							<a class="nav-link fw-bold {{route == 'profile.index' ? 'active' : ''}}" href="{{path('profile.index', {id: app.user.id})}}"><img class='profileNavbarImg' src="{{asset(app.user.img)}}" alt="Utilisateur">{{app.user.name}}</a>
						</li>
					</ul>
				</div>
			</div>

		</nav>
		<main class="container-lg"> {% block body %}{% endblock %}
			<p class="text-center">Tous droits réservés. The Social Network</p>
		</main>
	</body>
</html>
